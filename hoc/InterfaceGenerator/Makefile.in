include ../config.mk

dist_srcdir = InterfaceGenerator
dist_FILES = \
	$(wildcard *.hs) \
	Makefile.in \
	$(NULL)

all: ifgen

ifgen:
	mkdir -p build
	$(GHC) -dynamic --make Main.hs	\
		-odir build -hidir build \
		-package-conf ../inplace.conf \
		-o $@
		
clean:
	rm -rf ifgen build

install: all
	echo "Interface Generator will be used in-place."
